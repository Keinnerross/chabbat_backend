{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "singularName": "restaurant",
    "pluralName": "restaurants",
    "displayName": "Restaurant",
    "description": "Kosher restaurants and food establishments"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "imageUrls": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Bakery",
        "Restaurant",
        "Cafe",
        "Deli",
        "Catering",
        "Market"
      ]
    },
    "website": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "required": true
    },
    "established": {
      "type": "string"
    },
    "tags": {
      "type": "component",
      "component": "global.tags",
      "repeatable": true
    },
    "menu": {
      "type": "string"
    },
    "fullDescription": {
      "type": "text"
    }
  }
}
