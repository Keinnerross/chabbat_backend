{
  "kind": "collectionType",
  "collectionName": "activities",
  "info": {
    "singularName": "activity",
    "pluralName": "activities",
    "displayName": "Activities",
    "description": "Tours and activities available in Boquete"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "imageUrls": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Nature",
        "Adventure",
        "Cultural",
        "Religious",
        "Food",
        "Wellness",
        "Education",
        "Family"
      ]
    },
    "hours": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "tags": {
      "type": "component",
      "component": "global.tags",
      "repeatable": true
    }
  }
}
